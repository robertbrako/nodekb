extends layout

block content
    h1 #{title}
    form(method='POST', action='/articles/add')
        //form-group is bootstrap.js thing
        #form-group
            label Title:
            input.form-control(name='title', type='text')
        #form-group
            label Author:
            input.form-control(name='author', type='text')
        #form-group
            label Body:
            textarea.form-control(name='body')
        input.btn-primary(type='submit',value='Submit')